@page "/setup"
@using aiWorkoutPlanner.Framework
@using SetupComponents
@inject NavigationManager Navigation

@code {
    private int currentStep = 1; // Track the current step

    private void GoToNextStep()
    {
        currentStep++;
    }

    private void ToBackStep()
    {
        currentStep--;
    }
}

@if (currentStep == 1)
{
    <Step1 OnStepCompleted="GoToNextStep" />
}
else if (currentStep == 2)
{
    <Step2 OnStepCompleted="GoToNextStep" OnStepGoBack="ToBackStep" />
}
else if (currentStep == 3)
{
    <Step3 OnStepGoBack="ToBackStep" />
}

