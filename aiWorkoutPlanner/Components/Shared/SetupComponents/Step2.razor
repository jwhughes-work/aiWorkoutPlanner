                        <MudCheckBox T="bool" Label="Chest" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                        <MudCheckBox T="bool" Label="Glutes" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                        <MudCheckBox T="bool" Label="Legs" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                        <MudCheckBox T="bool" Label="Shoulders" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                        <MudCheckBox T="bool" Label="Cardio" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                    </div>
                </div>
            </div>
            
            <MudText Typo="Typo.h6">Available Equipment: </MudText>
            <div class="d-flex">
                <MudCheckBox T="bool" Label="Bands" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Barbell" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Bench" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Dunbell" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
               @*  <MudCheckBox T="bool" Label="Cables" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Machines (Strength)" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Machines (Cardio)" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                <MudCheckBox T="bool" Label="Mats + Yoga Area" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox> *@
            </div>
            <MudFab StartIcon="@Icons.Material.Filled.Add" Label="Add Equipment" Size="Size.Small" />

            <div class="row">
                <div class="col">
                    <MudButton OnClick="() => CancelStep()" Variant="Variant.Outlined" Color="Color.Warning" FullWidth="true">Back</MudButton>
                </div>
                <div class="col">
                    <MudButton OnClick="() => CompleteStep()" Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true">Next Step</MudButton>
                </div>
            </div>
        </MudForm>
    </MudPaper>
