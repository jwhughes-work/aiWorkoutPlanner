            <div class="d-flex">
                <MudRadioGroup T="string" Required="true" RequiredError="Workout type is required!">
                    <MudRadio Option="@("Strength")">Strength</MudRadio>
                    <MudRadio Disabled="true" Option="@("Weight")">Lose Weight</MudRadio>
                    <MudRadio Disabled="true" Option="@("Cardio")">Cardio</MudRadio>
                    <MudRadio Disabled="true" Option="@("Powerlifting")">Powerlifting</MudRadio>
                    <MudRadio Disabled="true" Option="@("Yoga")">Stretching/Yoga</MudRadio>
                </MudRadioGroup>
            </div>
            
            <MudText Typo="Typo.h6">Focus On: </MudText>
            <div class="container">
                <div class="left-column">
                    <MudRadioGroup T="string" Style="display: flex; flex-direction: column">
                        <MudRadio Dense="true" Option="@("Full")">Full Body</MudRadio>
                        <MudRadio Dense="true" Option="@("Upper")">Upper Body</MudRadio>
                        <MudRadio Dense="true" Option="@("Lower")">Lower Body</MudRadio>
                        <MudRadio Dense="true" Option="@("Custom")">Custom</MudRadio>
                    </MudRadioGroup>
                </div>
                <MudDivider Vertical="true" FlexItem="true" class="divider"/>
                <div class="right-column">
                    <div class="checkbox-group">
                        <MudCheckBox T="bool" Label="Abs" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
                        <MudCheckBox T="bool" Label="Back" Color="Color.Success" CheckedIcon="@Icons.Material.Filled.Star" UncheckedIcon="@Icons.Material.Filled.StarOutline"></MudCheckBox>
